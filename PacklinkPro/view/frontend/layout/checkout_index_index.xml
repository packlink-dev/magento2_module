<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <link src="Packlink_PacklinkPro::packlink/js/AjaxService.js"/>
        <link src="Packlink_PacklinkPro::packlink/js/StateUUIDService.js"/>
        <link src="Packlink_PacklinkPro::packlink/js/ResponseService.js"/>
        <link src="Packlink_PacklinkPro::packlink/location/js/LocationPicker.js"/>
        <link src="Packlink_PacklinkPro::packlink/location/js/Translations.js"/>
        <link src="Packlink_PacklinkPro::js/CheckoutShippingMethods.js"/>
        <link src="Packlink_PacklinkPro::js/MapModalController.js"/>

        <css src="Packlink_PacklinkPro::packlink/location/css/locationPicker.css"/>
        <css src="Packlink_PacklinkPro::css/checkout.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Packlink\PacklinkPro\Block\Checkout\Config" name="packlink.checkout.config"
                   template="Packlink_PacklinkPro::checkout/config.phtml"
                   cacheable="false">
            </block>
        </referenceContainer>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="packlink_surcharge" xsi:type="array">
                                                            <item name="component" xsi:type="string">Packlink_PacklinkPro/js/view/checkout/summary/surcharge</item>
                                                            <item name="sortOrder" xsi:type="number">900</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Packlink Surcharge</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
